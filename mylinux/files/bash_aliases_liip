liipRoot="/home/fabrice/liip"

alias cdcqi="cd $liipRoot/cq/instance"
alias cdpl="cd $liipRoot/fab/puppet/mylinux"
alias cdds="cd $liipRoot/dev/cq/aem-demosite"
alias cddsc="cd $liipRoot/dev/cq/aem-demosite/demosite-ui/src/main/content/jcr_root"
alias cdor="cd $liipRoot/dev/cq/jackrabbit-oak"
alias vlts="vlt st"
alias vltu="cddsc && vlt update && cdds && ./clean-content-xml.sh && cddsc"
alias vltc="vlt ci *"
alias vltco="vlt --credentials admin:admin co --force http://localhost:4502/crx"
alias mvndsi="mvn clean install -PinstallPackage"
alias vltrm="find . -name "*.vlt" -type f -delete"
alias cquinstds="curl 'http://localhost:4502/crx/packmgr/service/.json/etc/packages/Liip%20AG/demosite-ui-1.0-SNAPSHOT.zip' --user admin:admin --data 'cmd=uninstall'"
alias cqrmds="curl 'http://localhost:4502/crx/packmgr/service/.json/etc/packages/Liip%20AG/demosite-ui-1.0-SNAPSHOT.zip' --user admin:admin --data 'cmd=delete'"
alias vltrt="cquinstds && cqrmds && cdds && mvndsi && cddsc && vltrm && vltco && cdds && ./clean-content-xml.sh"
alias cdoa="cd /home/fabrice/liip/dev/cq/jackrabbit-oak"
alias cdoar="cd /home/fabrice/liip/dev/cq/jackrabbit-oak/oak-run/target"
alias javarunoa="java -jar oak-run-1.1-SNAPSHOT.jar"
alias javarunoad="java -Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=y,address=5005 -jar oak-run-1.1-SNAPSHOT.jar"
alias runoa="cdoar && javarunoa"
alias runoad="cdoar && javarunoad"

